{
  "name": "git-husky-commitzen-lab",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:JASONPANGGO/git-husky-commitzen-lab.git",
  "author": "jasonpang <jason_pang@126.com>",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-angular": "^12.0.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "commitlint --edit"
    }
  }
}
